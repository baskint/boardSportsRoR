<h1 class="text-2xl font-bold mb-4"><%= @wind_session.name %></h1>

<div class="bg-white shadow-md rounded-lg p-6">
  <p class="mb-2"><strong>Location:</strong> <%= @wind_session.location %></p>
  <p class="mb-2"><strong>Session Date:</strong> <%= @wind_session.session_date %></p>
  <p class="mb-2"><strong>Duration (Hours):</strong> <%= @wind_session.duration_hours %></p>
  <p class="mb-2"><strong>Notes:</strong> <%= @wind_session.notes %></p>

  <div class="mt-4">
    <%= link_to 'Edit', edit_wind_session_path(@wind_session), class: "inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Back', wind_sessions_path, class: "inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
