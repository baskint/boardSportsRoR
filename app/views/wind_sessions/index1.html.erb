<h1 class="text-2xl font-bold mb-4">Wind Sessions</h1>

<table class="min-w-full bg-white">
  <thead class="bg-gray-800 text-white">
    <tr>
      <th class="w-1/4 py-2">Name</th>
      <th class="w-1/4 py-2">Location</th>
      <th class="w-1/4 py-2">Session Date</th>
      <th class="w-1/4 py-2">Duration (Hours)</th>
      <th class="w-1/4 py-2">Notes</th>
      <th class="w-1/4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @wind_sessions.each do |wind_session| %>
      <tr class="bg-gray-200">
        <td class="border px-4 py-2"><%= wind_session.name %></td>
        <td class="border px-4 py-2"><%= wind_session.location %></td>
        <td class="border px-4 py-2"><%= wind_session.session_date %></td>
        <td class="border px-4 py-2"><%= wind_session.duration_hours %></td>
        <td class="border px-4 py-2"><%= wind_session.notes %></td>
        <td class="border px-4 py-2">
          <%= link_to 'Show', wind_session, class: "text-blue-500 hover:text-blue-700" %>
          <%= link_to 'Edit', edit_wind_session_path(wind_session), class: "text-green-500 hover:text-green-700" %>
          <%= link_to 'Destroy', wind_session, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Wind Session', new_wind_session_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
